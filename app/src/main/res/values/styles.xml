<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleToolBarColor">@color/white</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--Toolbar Style-->
    <style name="IceMung.Widget.Toolbar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:titleTextColor" tools:ignore="NewApi">?attr/titleToolBarColor</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/title_toolbar_elevation</item>
    </style>
    <style name="IceMung.Widget.Toolbar.ScrollEnterAlways" parent="IceMung.Widget.Toolbar">
        <!--必须与appbar一起使用-->
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <!--TabLayout Style-->
    <style name="IceMung.Widget.TabLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/title_toolbar_elevation</item>
        <item name="android:visibility">gone</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <!--SheetFloatingActionButton Style-->
    <style name="Widget.MaterialSheetFab.Fab" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/fab_elevation</item>
        <item name="android:src">@android:drawable/ic_dialog_email</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Widget.MaterialSheetFab.Sheet" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sheet_spacing</item>
        <item name="android:layout_marginBottom">@dimen/sheet_spacing</item>
        <item name="android:layout_marginLeft">@dimen/sheet_spacing</item>
        <item name="android:layout_marginRight">@dimen/sheet_spacing</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardElevation">@dimen/fab_sheet_elevation</item>
        <item name="cardMaxElevation">@dimen/fab_sheet_elevation</item>
        <item name="contentPadding">-3dp</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>

    <!--MEdiText Style -->
    <style name="MEdiText" parent="Widget.AppCompat.EditText"/>
    <!-- normal -->
    <style name="MEdiText.Normal" parent="MEdiText">
        <!--默认颜色-->
        <item name="met_baseColor">?attr/colorPrimary</item>
        <!--激活状态颜色-->
        <item name="met_primaryColor">?attr/colorAccent</item>
        <item name="met_clearButton">true</item>
    </style>
    <!-- 带头部提示文本-->
    <style name="MEdiText.FloatingLabel" parent="MEdiText.Normal">
        <!--头部提示文本设置  none normal highlight-->
        <item name="met_floatingLabel">highlight</item>
    </style>
    <!--带底部提示文本-->
    <style name="MEdiText.HelperText" parent="MEdiText.Normal">
        <!--met_helperText: 底部的 helper text。-->
        <!--met_helperTextAlwaysShown: 是否总是显示 helper text， 而不仅仅是在获得焦点状态时。默认为 false。-->
        <!--met_helperTextColor: Helper text 的字体颜色。-->
        <!--met_errorColor: Error text 的字体颜色。-->
        <!--met_bottomTextSize: 底部文字（Helper/Error text）的字体大小。默认为12sp。-->
        <!--met_minBottomTextLines:底部为文字预留的行数，不管是否有 Helper/Error text 正在显示。-->
    </style>

</resources>
